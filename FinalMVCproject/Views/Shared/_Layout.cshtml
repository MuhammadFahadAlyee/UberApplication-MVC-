                    </div>

                    <div>
                     <b>Follow Us</b>   <a class="socialmedia" href="https://www.facebook.com/"style="color:white;background-color:white;"><i class="fa fa-facebook-official" style="font-size:24px;color:re;background-color:white;"></i></a>

                    </div>

                </div>

            <div style="float:right;">@DateTime.Now.Year All copyright Reserved</div> 
                </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
